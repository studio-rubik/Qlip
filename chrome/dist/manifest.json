{
  "name": "Qlip",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Clip design inspiration on the web",
  "homepage_url": "https://qlip.page",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Qlip",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "activeTabs",
    "identity",
    "identity.email",
    "storage"
  ],
  "content_security_policy": "default-src 'self'; style-src 'self' data: 'unsafe-inline'; img-src data:; connect-src data: http: https:;",
  "oauth2": {
    "client_id": "90927612981-aq3qo5aop2eoeblcnj847j7ctmsurcro.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "commands": {
    "capture.toggle": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Toggle Capture`"
    }
  },
  "web_accessible_resources": ["img/*"]
}
