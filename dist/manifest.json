{
  "name": "Dom Clipper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Clip HTML DOM as image.",
  "homepage_url": "https://duo.com/labs",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "TSRWPCX"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": ["https://*/*", "storage", "activeTab"],
  "content_security_policy": "default-src 'self'; style-src 'self' data: 'unsafe-inline'; img-src data:;",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["js/content.js"]
    }
  ]
}
